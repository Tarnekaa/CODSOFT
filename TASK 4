
# ğŸ’ Step 1: Pack our ML backpack
import pandas as pd  # Like Excel but way cooler
from sklearn.model_selection import train_test_split  # Splits data like sharing snacks with friends
from sklearn.feature_extraction.text import TfidfVectorizer  # Turns words into math magic âœ¨
from sklearn.naive_bayes import MultinomialNB  # Fast and text-friendly
from sklearn.linear_model import LogisticRegression  # The classic yes/no predictor
from sklearn.svm import SVC  # Powerful but a bit slow ğŸ›¡ï¸
from sklearn.metrics import classification_report  # Gives us a model report card ğŸ“Š

# ğŸ“‚ Step 2: Load the SMS dataset
df = pd.read_csv("spam.csv", encoding='latin-1')  # Replace with your actual file
df = df[['v1', 'v2']]  # Keep only label and message columns
df.columns = ['label', 'message']  # Rename for clarity

# ğŸ§¼ Step 3: Clean the labels
df['label'] = df['label'].map({'ham': 0, 'spam': 1})  # ham = legit ğŸ, spam = junk ğŸ—‘ï¸

# âœ‚ï¸ Step 4: Split into training and testing sets
X_train, X_test, y_train, y_test = train_test_split(df['message'], df['label'], test_size=0.2, random_state=42)
print("ğŸ“Š Training and testing sets ready!")

# ğŸ§  Step 5: Convert text to numbers using TF-IDF
vectorizer = TfidfVectorizer()
X_train_vec = vectorizer.fit_transform(X_train)
X_test_vec = vectorizer.transform(X_test)

# ğŸ¤– Step 6: Train and test different models

# ğŸ“® Naive Bayes â€” the speedy spam buster
nb_model = MultinomialNB()
nb_model.fit(X_train_vec, y_train)
nb_preds = nb_model.predict(X_test_vec)
print("ğŸ“® Naive Bayes Results:")
print(classification_report(y_test, nb_preds))

# ğŸ“¦ Logistic Regression â€” the reliable calculator
lr_model = LogisticRegression()
lr_model.fit(X_train_vec, y_train)
lr_preds = lr_model.predict(X_test_vec)
print("ğŸ“¦ Logistic Regression Results:")
print(classification_report(y_test, lr_preds))

# ğŸ›¡ï¸ Support Vector Machine â€” the bodyguard of ML
svm_model = SVC()
svm_model.fit(X_train_vec, y_train)
svm_preds = svm_model.predict(X_test_vec)
print("ğŸ›¡ï¸ SVM Results:")
print(classification_report(y_test, svm_preds))
